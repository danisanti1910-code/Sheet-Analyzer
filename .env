# =============================================================================
# BACKEND (Render / servidor Node)
# =============================================================================
# PORT=5000

# URL pública del frontend (CORS). Sin barra final.
FRONTEND_URL=

# Emails de super administrador, separados por coma
SUPER_ADMIN_EMAIL=

# =============================================================================
# FRONTEND (solo si el front está en otro dominio)
# =============================================================================
# URL del backend. Sin barra final.
VITE_API_URL=
